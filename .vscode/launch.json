{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Ejecutar Node.js",
      "program": "${workspaceFolder}/app.js",
      "console": "integratedTerminal"
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Lanzar en Microsoft Edge",
      "url": "http://localhost:3000",
      "runtimeArgs": ["--remote-debugging-port=9222"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Lanzar en Chrome",
      "url": "http://localhost:3000",
      "runtimeArgs": ["--remote-debugging-port=9222"]
    }
  ]
}